.home_wrapper
  //Search Form
  = form_tag '/', method: :get, class: 'form-horizontal' do
    .col-sm-6.col-sm-offset-3
      .form-group
        %label.control-label.col-sm-2 Search
        .col-sm-10
          = text_field_tag :k, params[:k], class: 'form-control'
  .clearfix

  .col-sm-4
    //Iframe for Wikipedia Search Page
    %h4
      Wikipedia
    %iframe{src: "http://en.wikipedia.org/w/index.php?title=Special%3ASearch&profile=default&search=#{parse_keyword}&fulltext=Search", width: '100%', height: 700}

  .col-sm-4
    //Modified Scaper for IMDB Search Page
    %h4
      IMDB
    - @imdb.each do |items|
      .panel.panel-default
        %h3.panel-header
          = items.keys[0]
        %ul.list-group.results
          - items.values[0].each do |item|
            %li.list-group-item
              = image_tag item[:img]
              = link_to item[:title], 'http://imdb.com' + item[:url].to_s, target: '_blank'

  .col-sm-4
    //Iframe for Rotten Tomatoes Search Page
    %h4
      Rotten Tomatoes
    %iframe{src: "http://www.rottentomatoes.com/search/?search=#{parse_keyword}&sitesearch=rt", height: 700, width: '100%'}

