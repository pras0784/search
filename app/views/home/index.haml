.home_wrapper
  //Search Form
  = form_tag '/', method: :get, class: 'form-horizontal' do
    .col-sm-6.col-sm-offset-3
      .form-group
        %label.control-label.col-sm-2 Search
        .col-sm-10
          = text_field_tag :k, params[:k], class: 'form-control', placeholder: 'Enter a keyword'
  .clearfix

  .col-sm-4
    %h4
      Wikipedia
    = render 'wikipedia'

  .col-sm-4
    %h4
      IMDB
    = render 'imdb'

  .col-sm-4
    %h4
      Rotten Tomatoes
    = render 'rtomatoes'
